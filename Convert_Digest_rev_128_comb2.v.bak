module Convert_Digest_rev_128_comb2 (
    input  wire [127:0] in_data,    // lower 128 bits of squeezed data
    output wire [127:0] out_data    // converted digest (big-endian byte order)
);
    // This continuous assignment reverses the byte order of the 128-bit word.
    assign out_data = { in_data[7:0],
                        in_data[15:8],
                        in_data[23:16],
                        in_data[31:24],
                        in_data[39:32],
                        in_data[47:40],
                        in_data[55:48],
                        in_data[63:56],
                        in_data[71:64],
                        in_data[79:72],
                        in_data[87:80],
                        in_data[95:88],
                        in_data[103:96],
                        in_data[111:104],
                        in_data[119:112],
                        in_data[127:120] };
endmodule
module Truncate #(
    parameter WIDTH_IN = 1088,
    parameter MAX_L = 256  // Maximum possible value of L
)(
    input wire [WIDTH_IN-1:0] Z,
    input wire [$clog2(MAX_L)-1:0] L_sel,  // Control signal to select L
    output reg [MAX_L-1:0] Y
);

    integer i;

    always @(*) begin
        // Default assignment
        Y = 0;

        // Truncate Z to L bits based on L_sel
        for (i = 0; i < MAX_L; i = i + 1) begin
            if (i < L_sel)
                Y[i] = Z[i];
            else
                Y[i] = 0;
        end
    end

endmodule
